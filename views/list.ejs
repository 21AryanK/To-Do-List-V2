<%- include("header") -%>

  <div class="ani">
    <h1 class="new typewriter">Your To Do List!!!</h1>
  </div>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(newListItem){ %>
        <div class="item">
          <input type="checkbox" >
          <p><%=  newListItem.name  %></p>
        </div>
    <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button class="add" type="submit" name="list">+</button>
      </form>
  </div>

  <div class="resetButton">
    <form action="/delete" method="post">
      <button class="resetB" 
       name="aboutButton"><a class="reset-a" href="/about">About</a></button>
      <button class="resetB" type="submit" name="reset">Reset</button>
    </form>
  </div>
    
    

<%- include("footer") -%>
